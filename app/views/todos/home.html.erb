<% if user_signed_in? %>

<div class = "card">
  <div class = "text-center">
    <div class="card" style="width: 38rem;">
      <%= image_tag('home.jpg', class: 'card-img-top') %>
    <div class="card-body">
      <h5 class="card-title">You are logged in!</h5>
      <p class="card-text">We are happy that you use our site, enjoy!</p>
      <%= link_to "Make new Todo", new_user_todo_path(current_user),  class: "btn btn-primary" %>
    </div>
    </div>
  </div>
</div>

<% else %>

<div class = "card">
  <div class = "text-center">
    <div class="card" style="width: 38rem;">
      <%= image_tag('home.jpg', class: 'card-img-top') %>
    <div class="card-body">
      <h5 class="card-title">Create your own To do list!</h5>
      <p class="card-text">Sign up now! Everything is free for logged users, join to us!</p> 
      <%= link_to "Sign Up!", new_user_registration_path,  class: "btn btn-primary" %>
    </div>
    </div>
  </div>
</div>

<% end %> 